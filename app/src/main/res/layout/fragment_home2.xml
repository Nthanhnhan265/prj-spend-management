<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="@color/xanh3"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15sp"
        android:background="@color/xanh1"


        >
        <Button
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="Tien Chi"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/btnTienChi"
            android:backgroundTint="@color/xanh2"
            android:background="@drawable/button_background"
            >

        </Button>

        <Button
            android:id="@+id/btnTienThu"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/xanh1"
            android:text="Tien Thu"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold">


        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNgay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:text="Ngày"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/dateEditText"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35sp"

            android:clickable="true"
            android:focusable="false"
            android:hint="Nhap Ngay Thang" />

        <Button
            android:id="@+id/datepickerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn ngày" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="180sp"
        android:padding="25sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi Chu"
            android:textSize="15sp">

        </TextView>
            <EditText
                android:id="@+id/edtNhapGhiChu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập Ghi Chú"
                android:layout_marginLeft="20sp"
                android:padding="15sp"
                >

            </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="260sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tien Chi "
            android:textSize="15sp"
            android:layout_marginLeft="25sp"
            >

        </TextView>
            <EditText
                android:layout_width="260sp"
                android:layout_height="wrap_content"
                android:hint="0"
                android:textStyle="bold"
                android:padding="15sp"
                android:inputType="number"
                android:layout_marginLeft="15sp"
                android:autofillHints="">

            </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="đ"
            android:layout_marginLeft="15sp"
            >

        </TextView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Doanh Muc"
        android:layout_marginLeft="15sp"
        android:textSize="25sp"
        android:layout_marginTop="320sp">

    </TextView>

    <LinearLayout
      android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="330sp"
        android:layout_marginEnd="25dp"

        android:layout_marginRight="25sp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="15sp"
            android:background="@drawable/button_background"
            android:text="Ăn uống"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:background="@drawable/button_background"
            android:text="Ăn uống"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:background="@drawable/button_background"
            android:text="Ăn uống"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Ăn uống"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="380sp"
        android:orientation="horizontal"
        android:padding="25sp"

        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ăn uống"
            android:layout_marginRight="5sp"
            android:background="@drawable/button_background"
            >
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ăn uống"
            android:layout_marginRight="5sp"
            android:background="@drawable/button_background"
            >
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ăn uống"
            android:layout_marginRight="5sp"
            android:background="@drawable/button_background"
            >
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ăn uống"
            android:background="@drawable/button_background"
            >
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="430sp"
        android:orientation="horizontal"
        android:padding="25sp"

        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ăn uống"
            android:layout_marginEnd="5sp"
            android:background="@drawable/button_background"
            >
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ăn uống"
            android:layout_marginRight="5sp"
            android:background="@drawable/button_background"
            >
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm"


            >
        </Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="550sp"
        android:text="Nhập Khoản Tiền Chi"
        android:padding="20sp"
        android:textSize="20sp"
        android:layout_marginLeft="35sp"
        android:layout_marginRight="35sp"
        >

    </Button>
    </LinearLayout>
</RelativeLayout>