<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:orientation="vertical"
    android:padding="16dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNgay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ngay"
            android:textColor="@color/lighter_blue"
            android:textSize="15sp"

            android:textStyle="bold" />

        <Button
            android:id="@+id/btnDatePicker"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:backgroundTint="@color/darker_blue"
            android:onClick="showDatePicker"
            android:text="@string/ngay"
            android:textColor="@color/lighter_blue"
            android:textSize="15sp" />

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivNgaySau"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginEnd="40sp"
            android:contentDescription="@string/ngaySau"
            android:src="@drawable/ic_next"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:orientation="horizontal"
        android:padding="10sp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Nội Dung "
            android:textColor="@color/lighter_blue"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtNhapGhiChu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_weight="8"
            android:hint="Nhập nội dung "
            android:inputType="text"
            android:padding="15sp"
            android:textColor="@color/lighter_blue"
            android:textColorHint="@color/lighter_blue" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">
    </LinearLayout>


    <ListView
        android:id="@+id/listViewDanhSachDM"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="5sp"
        android:background="@color/light_blue"
        android:divider="@color/lighter_blue"
        android:dividerHeight="1dp"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">
    </ListView>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       >
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Them"
           >

       </Button>
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Xoa"
           >

       </Button>
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Sua"
           ></Button>
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Thoat"
           >

       </Button>
       </LinearLayout>

</LinearLayout>
